@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Alt Adres Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Alt Adres ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet
                            butonuna tıklayarak işlemi tamamlayabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ID" />
                            <div class="form-group">
                                <label for="exampleInputDesc">Şirket Açıklaması</label>
                                <textarea class="form-control" id="exampleInputDesc" asp-for="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoLink">Bulunduğunuz Konum</label>
                                <input type="text" class="form-control" id="exampleInputVideoLink" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDesc">Şirket Maili</label>
                                <input type="text" class="form-control" id="exampleInputVideoDesc" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageLink">Şirket Telefon Numarası</label>
                                <input type="text" class="form-control" id="exampleInputImageLink" asp-for="Phone">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Alt Adresi Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

