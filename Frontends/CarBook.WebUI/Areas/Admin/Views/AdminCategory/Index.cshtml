@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Bloglarla ilgili yeni kategori ekleme,
                            kategori listesi,
                            kategori üzerinde düzenleme ve bir kategoriyi kaldırma işlemlerini
                            buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori Adı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>
                                                <a href="/Admin/AdminCategory/RemoveCategory/@item.ID"
                                                   class="btn btn-outline-danger">Sil</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminCategory/UpdateCategory/@item.ID"
                                                   class="btn btn-outline-success">Güncelle</a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminCategory/UpdateCategory/@item.ID"
                                                   class="btn btn-outline-dark">Kategoriye Ait Bloglar</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




