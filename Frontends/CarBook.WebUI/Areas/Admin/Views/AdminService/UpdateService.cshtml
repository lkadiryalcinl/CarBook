@model UpdateServiceDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Title Adlı Servisi Güncelle</h4>
                        <p class="card-subtitle mb-4">
                            Servis ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet
                            butonuna tıklayarak işlemi tamamlayabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ID" />
                            <div class="form-group">
                                <label for="exampleInputName">Servis Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Servis Açıklaması</label>
                                <textarea class="form-control" id="exampleInputDesc" asp-for="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Servis Icon URL</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="IconUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Servis Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


