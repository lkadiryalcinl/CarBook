@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkımda Alanı Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            hakkımda ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet
                            butonuna tıklayarak işlemi tamamlayabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">About Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">About Açıklaması</label>
                                <textarea class="form-control" id="exampleInputDesc" asp-for="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageLink">About Fotoğraf Linki</label>
                                <input type="text" class="form-control" id="exampleInputImageLink" asp-for="ImageUrl">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda Alanını Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

