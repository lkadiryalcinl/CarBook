@model UpdateAuthorDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name Adlı Yazarı Güncelle</h4>
                        <p class="card-subtitle mb-4">
                            Yazar ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet
                            butonuna tıklayarak işlemi tamamlayabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Fotoğraf Linki</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="ImageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazar Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


